{
  "name": "@openpaw/channel-whatsapp",
  "version": "1.0.0",
  "description": "WhatsApp channel adapter with encrypted session storage for OpenPaw",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@zkagi/openpaw-vault": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@zkagi/openpaw-vault": {
      "optional": true
    }
  }
}
